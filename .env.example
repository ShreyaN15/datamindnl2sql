## Example environment variables for local development
# Copy this file to .env and fill values for local testing

# JWT secret used to sign access tokens (REPLACE in production)
AUTH_JWT_SECRET=replace-with-a-strong-secret

# Auth DB: SQLAlchemy DSN. Defaults to sqlite file ./auth_users.db if unset.
# Example Postgres DSN: postgresql+psycopg2://user:pass@host:5432/datamind_auth
AUTH_DB_URL=sqlite:///./auth_users.db

# Optional Redis for session persistence. If unset, in-memory sessions are used.
# Example: redis://localhost:6379/0
REDIS_URL=

# Fernet key for encrypting stored DB credentials (BASE64). REQUIRED for production.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
APP_ENCRYPTION_KEY=

# Token TTL in seconds (optional)
AUTH_JWT_EXP_SECONDS=3600
